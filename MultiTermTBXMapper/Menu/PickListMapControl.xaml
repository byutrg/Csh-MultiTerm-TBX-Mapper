<UserControl x:Class="MultiTermTBXMapper.Menu.PickListMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiTermTBXMapper.Menu"
             mc:Ignorable="d" MaxHeight="30">
    <Grid Width="393">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="160*"/>
        </Grid.ColumnDefinitions>
        <Label Name="label_picklist_item" Grid.Column="0" HorizontalAlignment="Left" FontSize="14" Content="PicklistItem" VerticalAlignment="Center" Width="131" Height="30"/>
        <Image HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Center" Width="100" Source="/MultiTermTBXMapper;component/Resources/arrow_skinny.png" Stretch="Fill" Height="30">
            <Image.Resources>
                <Style TargetType="Image">
                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
                </Style>
            </Image.Resources>
        </Image>
        <ComboBox Name="combo_tbx_picklist" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="22" Margin="0,4" Width="150" />

    </Grid>
</UserControl>
