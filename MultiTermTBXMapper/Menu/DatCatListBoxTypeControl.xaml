<UserControl x:Class="MultiTermTBXMapper.Menu.DatCatListBoxTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiTermTBXMapper.Menu"
             mc:Ignorable="d" 
             MinHeight="200" MinWidth="250">
    <Grid  Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Add all TBX Data Categories to which this data category maps (usually only one):" VerticalAlignment="top" />
        <ListBox Name="lb_tbx_dcs" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,14" KeyDown="lb_tbx_dcs_KeyDown"/>
        <Button Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0" Content="Add" Width="60" Click="Button_Click" IsDefault="True" />
        <Button Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,10,0" Content="Remove" Width="60" Click="Button_Click_1" />
    </Grid>
</UserControl>
