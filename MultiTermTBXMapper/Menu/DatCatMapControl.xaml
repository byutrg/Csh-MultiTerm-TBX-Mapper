<UserControl x:Class="MultiTermTBXMapper.Menu.DatCatMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiTermTBXMapper.Menu"
             mc:Ignorable="d" MinHeight="200" MinWidth="250" >
    <Grid Margin="10,10,10,10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="dc_user" Grid.Row="0" Text="User DC" FontSize="22" TextAlignment="Center" VerticalAlignment="Center" />
        <Button FontSize="24" Padding="10,0" HorizontalAlignment="Center" VerticalAlignment="Stretch" MinWidth="180" x:Name="dc_tbx" Grid.Row="2" Content="???" Click="dc_tbx_Click" Background="#FFFF9999" />
        <Image HorizontalAlignment="Stretch" Margin="0,4,0,12" Grid.Row="1" VerticalAlignment="Stretch" MinWidth="24" Source="/MultiTermTBXMapper;component/Resources/slurp_arrows.png" />
        <Button x:Name="button_convert" Grid.Row="3" Content="Next" Height="25" Width="100" HorizontalAlignment="Center" IsEnabled="False" Click="button_convert_Click" />
    </Grid>
</UserControl>
